{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.EntityFrameworkCore": "Debug"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Grafana.Loki"
        ],
        "MinimumLevel": {
            "Default": "Debug"
        },
        "WriteTo": [
            {
                "Name": "GrafanaLoki",
                "Args": {
                    "uri": "http://mon-stor1.unix.teamstr.ru:3100",
                    "labels": [
                        {
                            "key": "app",
                            "value": "infrastracture"
                        },
                        {
                            "key": "service",
                            "value": "api"
                        },
                        {
                            "key": "environment",
                            "value": "development"
                        }
                    ],
                    "propertiesAsLabels": [
                        "app"
                    ]
                }
            }
        ]
    }
}
